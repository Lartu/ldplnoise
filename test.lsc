PROCEDURE:
# XXX: need to make color work
# STORE "\e[36;1mLDPLNOISE \e[35m>>> \e[0m" IN RL-PROMPT

STORE ">>> " IN RL-PROMPT
CALL RL-ACCEPT
WHILE RL-INPUT IS NOT EQUAL TO "" DO
    IF RL-INPUT IS EQUAL TO "quit" THEN
        EXIT
    END IF

    IF RL-INPUT IS EQUAL TO "exit" THEN
        EXIT
    END IF

    DISPLAY RL-INPUT CRLF
    CALL RL-ACCEPT
REPEAT
